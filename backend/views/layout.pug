doctype html
html
  head
    title #{title || 'Admin'}
    style.
      body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background: linear-gradient(120deg, #f3e8ff 0%, #f0fff4 100%);
        margin: 0;
        padding: 0;
        min-height: 200vh;
        display: flex;
        flex-direction: column;
        font-size: 1.08em;
      }     
      header {
        background: url('/uploads/logo1.png') center/cover no-repeat;
        color: #fff;
        padding: 2.2rem 0 1.2rem 0;
        text-align: center;
        min-height: 300px;
        font-size: 2.2em;
        font-family: 'Playfair Display', serif;
        letter-spacing: 0.04em;
        font-weight: 700;
        text-shadow: 0 2px 12px #a21caf33;
      }
      nav {
        background: linear-gradient(90deg, #f59e42 0%, #a21caf 100%);
        padding: 1.1rem 0;
        text-align: center;
        margin-bottom: 2.2rem;
        box-shadow: 0 2px 12px #a21caf22;
      }
      nav a {
        color: #fff;
        text-decoration: none;
        margin: 0 2rem;
        font-size: 1.18em;
        font-weight: 600;
        letter-spacing: 0.03em;
        transition: color 0.2s, background 0.2s;
        padding: 0.4em 1em;
        border-radius: 0.5em;
        display: inline-block;
      }
      nav a:hover {
        color: #a21caf;
        background: #fff3e0;
      }
      .container {
        max-width: 1100px;
        min-width: 500px;
        margin: 2.5rem auto;
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 6px 32px #0002;
        padding: 2.5rem 2rem;
        flex: 1;
      }
      h1, h2, h3 {
        color: #a21caf;
        font-family: 'Playfair Display', serif;
      }
      h1 {
        font-size: 2.2em;
        margin-bottom: 0.7em;
      }
      h2 {
        font-size: 1.4em;
        margin-bottom: 0.5em;
      }

      /* CV & Password Forms */
      form {
        display: flex;
        flex-direction: column;
        gap: 1.2em;
        max-width: 600px;
        margin: 0 auto;
      }
      form label {
        font-weight: 500;
        font-size: 1.1em;
      }
      form input[type="text"],
      form input[type="password"],
      form input[type="file"],
      form textarea {
        padding: 0.7em 1em;
        border: 2px solid #a5b4fc;
        border-radius: 0.7em;
        font-size: 1.08em;
      }
      form input[type="file"] {
        background: #fff;
        border-style: dashed;
      }
      form button[type="submit"] {
        background: linear-gradient(90deg,#a21caf 60%,#f59e42 100%);
        color: #fff;
        border: none;
        border-radius: 0.7em;
        padding: 0.7em 2em;
        font-size: 1.18em;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 2px 12px #a21caf33;
        transition: background 0.2s;
      }
      form button[type="submit"]:hover {
        background: linear-gradient(90deg,#f59e42 60%,#a21caf 100%);
      }

      .feedback {
        margin-top: 1em;
        font-weight: 500;
        color: #ef4444;
        background: #fef2f2;
        padding: 0.8em;
        border-radius: 0.5em;
        text-align: center;
      }

      footer {
        background: #a21caf;
        color: #fff;
        text-align: center;
        padding: 1rem 0;
        margin-top: auto;
        letter-spacing: 0.04em;
        font-size: 1.08em;
      }
  body
    header
    nav
      a(href="/") Home
      a(href="/messages") Messages
      a(href="/blog") Blog
      a(href="/admin/upload-cv") Resume
    block content
    footer
      | &copy; #{new Date().getFullYear()} Admin Dashboard

