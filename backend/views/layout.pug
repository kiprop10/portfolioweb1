doctype html
html
  head
    title #{title || 'Admin'}
    style.
      body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background: linear-gradient(120deg, #f3e8ff 0%, #f0fff4 100%);
        margin: 0;
        padding: 0;
        min-height: 200vh;
        display: flex;
        flex-direction: column;
        font-size: 1.08em;
      }     
      header {
        background: linear-gradient(90deg, #a21cafcc 0%, #f59e42cc 100%), url('/uploads/logo.png') center/cover no-repeat;
        color: #fff;
        padding: 2.2rem 0 1.2rem 0;
        text-align: center;
        min-height: 300px;
        font-size: 2.2em;
        font-family: 'Playfair Display', serif;
        letter-spacing: 0.04em;
        font-weight: 700;
        text-shadow: 0 2px 12px #a21caf33;
      }
      nav {
        background: linear-gradient(90deg, #f59e42 0%, #a21caf 100%);
        padding: 1.1rem 0;
        text-align: center;
        margin-bottom: 2.2rem;
        box-shadow: 0 2px 12px #a21caf22;
      }
      nav a {
        color: #fff;
        text-decoration: none;
        margin: 0 2rem;
        font-size: 1.18em;
        font-weight: 600;
        letter-spacing: 0.03em;
        transition: color 0.2s, background 0.2s;
        padding: 0.4em 1em;
        border-radius: 0.5em;
        display: inline-block;
      }
      nav a:hover {
        color: #a21caf;
        background: #fff3e0;
      }
      .container {
        max-width: 1100px;
        min-width: 500px;
        margin: 2.5rem auto;
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 6px 32px #0002;
        padding: 2.5rem 2rem 2rem 2rem;
        flex: 1;
      }
      h1, h2, h3 {
        color: #a21caf;
        font-family: 'Playfair Display', serif;
      }
      h1 {
        font-size: 2.2em;
        margin-bottom: 0.7em;
      }
      h2 {
        font-size: 1.4em;
        margin-bottom: 0.5em;
      }
      /* Blog Management Cards */
      .blog-card {
        margin-bottom: 2em;
        padding: 1.5em 1em;
        background: linear-gradient(90deg,#f0f9ff 60%,#f0fff4 100%);
        border-radius: 1em;
        box-shadow: 0 2px 8px #3b82f611;
        position: relative;
      }
      .blog-card img {
        max-width: 220px;
        max-height: 120px;
        margin-bottom: 0.5em;
        display: block;
        border-radius: 0.5em;
      }
      .blog-card h2 {
        margin: 0 0 0.3em 0;
        color: #a21caf;
      }
      .blog-card .meta {
        color: #888;
        font-size: 1em;
      }
      .blog-card p {
        margin: 0.7em 0 1em 0;
      }
      .blog-card a {
        margin-right: 1em;
        font-weight: 500;
        text-decoration: none;
      }
      .blog-card a[href*="edit"] {
        color: #06b6d4;
      }
      .blog-card a[href*="blog/"]:not([href*="edit"]) {
        color: #a21caf;
      }
      .blog-card .delete-btn {
        background: #ef4444;
        color: #fff;
        border: none;
        border-radius: 0.5em;
        padding: 0.3em 1em;
        font-size: 1em;
        cursor: pointer;
        transition: background 0.2s;
      }
      .blog-card .delete-btn:hover {
        background: #b91c1c;
      }
      /* Blog Form */
      form[enctype="multipart/form-data"] {
        display: flex;
        flex-direction: column;
        gap: 1.2em;
        max-width: 600px;
      }
      form label {
        font-weight: 500;
        font-size: 1.1em;
      }
      form input[type="text"],
      form textarea {
        padding: 0.7em 1em;
        border: 2px solid #a5b4fc;
        border-radius: 0.7em;
        font-size: 1.08em;
      }
      form textarea {
        min-height: 120px;
        resize: vertical;
      }
      form input[type="file"] {
        margin-bottom: 0.5em;
      }
      form img {
        max-width: 220px;
        max-height: 120px;
        border-radius: 0.5em;
        margin-bottom: 0.5em;
      }
      form button[type="submit"] {
        background: linear-gradient(90deg,#a21caf 60%,#f59e42 100%);
        color: #fff;
        border: none;
        border-radius: 0.7em;
        padding: 0.7em 2em;
        font-size: 1.18em;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 2px 12px #a21caf33;
        transition: background 0.2s;
      }
      form button[type="submit"]:hover {
        background: linear-gradient(90deg,#f59e42 60%,#a21caf 100%);
      }
      /* Messages */
      .message-header {
        display: flex;
        align-items: center;
        gap: 0.7em;
        margin-bottom: 0.3em;
      }
      .name {
        color: #06b6d4;
        font-weight: bold;
        font-size: 1.18em;
        margin-right: 0.5em;
      }
      .contact {
        color: #a21caf;
        font-weight: 500;
        font-size: 1.08em;
        margin-right: 0.5em;
      }
      .content {
        color: #222;
        font-size: 1.08em;
        margin-top: 0.3em;
        display: block;
      }
      .meta {
        color: #888;
        font-size: 1em;
        margin-top: 0.5em;
        display: block;
      }
      .delete-btn {
        color: #fff;
        background: #ef4444;
        border: none;
        border-radius: 0.5em;
        padding: 0.3em 1em;
        font-size: 1em;
        cursor: pointer;
        margin-left: 1em;
        transition: background 0.2s;
      }
      .delete-btn:hover {
        background: #b91c1c;
      }
      footer {
        background: #a21caf;
        color: #fff;
        text-align: center;
        padding: 1rem 0;
        margin-top: auto;
        letter-spacing: 0.04em;
        font-size: 1.08em;
      }
  body
    header
    
    nav
      a(href="/") Home
      a(href="/messages") Messages
      a(href="/blog") Blog
      a(href="/login") Login
    block content
    footer
      | &copy; #{new Date().getFullYear()} Admin Dashboard