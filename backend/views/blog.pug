extends layout

block content
  .container
    h1 Blog Management
    a(href="/blog/new", style="margin-bottom:1.5em;display:inline-block;") Add New Blog
    if blogs.length === 0
      p No blogs yet.
    each blog in blogs
      .message
        if blog.imageUrl
          img(src=blog.imageUrl, alt="Blog Image", style="max-width:200px;max-height:120px;margin-bottom:0.5em;display:block;")
        h2 
          a(href=`/blog/${blog._id}`)= blog.title
        span.meta Posted: #{blog.createdAt.toLocaleString()}
        p= blog.content
        a(href=`/blog/edit/${blog._id}`) Edit
        form(method="POST", action=`/blog/delete/${blog._id}`, style="display:inline;")
          button.delete-btn(type="submit") Delete